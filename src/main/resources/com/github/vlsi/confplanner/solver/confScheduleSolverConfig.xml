<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <!--<environmentMode>FAST_ASSERT</environmentMode>-->
    <solutionClass>com.github.vlsi.confplanner.model.ConferenceData</solutionClass>
    <entityClass>com.github.vlsi.confplanner.solver.TalkPlacement</entityClass>

    <scoreDirectorFactory>
        <scoreDrl>com/github/vlsi/confplanner/solver/confScheduleScoreRules.drl</scoreDrl>
    </scoreDirectorFactory>

    <termination>
        <secondsSpentLimit>2</secondsSpentLimit>
        <!--<bestScoreLimit>-0hard/-999999soft</bestScoreLimit>-->
    </termination>
    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
    </constructionHeuristic>
    <localSearch>
        <unionMoveSelector>
            <!--<changeMoveSelector/>-->
            <swapMoveSelector>
                <filterClass>com.github.vlsi.confplanner.solver.TaskPlacementMoveFilter</filterClass>
            </swapMoveSelector>
        </unionMoveSelector>
        <!--<acceptor>-->
        <!--<entityTabuSize>9</entityTabuSize>-->
        <!--</acceptor>-->
        <!--<forager>-->
        <!--<acceptedCountLimit>900</acceptedCountLimit>-->
        <!--</forager>-->
        <acceptor>
            <lateAcceptanceSize>7000</lateAcceptanceSize>
            <entityTabuRatio>0.05</entityTabuRatio>
            <!--<simulatedAnnealingStartingTemperature>100hard/10000soft</simulatedAnnealingStartingTemperature>-->
        </acceptor>
        <forager>
            <acceptedCountLimit>4</acceptedCountLimit>
            <!--<acceptedCountLimit>1000</acceptedCountLimit>-->
            <!--<finalistPodiumType>STRATEGIC_OSCILLATION</finalistPodiumType>-->
        </forager>
        <!--<acceptor>-->
        <!--<stepCountingHillClimbingSize>200</stepCountingHillClimbingSize>-->
        <!--</acceptor>-->
        <!--<forager>-->
        <!--<acceptedCountLimit>1</acceptedCountLimit>-->
        <!--</forager>-->
    </localSearch>
</solver>
